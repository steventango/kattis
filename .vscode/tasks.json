{
  "version": "2.0.0",
  "tasks": [
    {
			"type": "shell",
			"label": "clean",
			"command": "rm",
      "args": [
        "*.out"
      ],
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"showReuseMessage": false
			}
		},
    {
      "type": "shell",
      "label": "submit",
      "command": "yes",
      "args": [
        "|",
        "./env/bin/python",
        "../kattis-cli/submit.py",
        "${fileBasename}"
      ],
      "problemMatcher": [],
      "presentation": {
        "showReuseMessage": false
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task generated by Debugger."
    }
  ]
}
